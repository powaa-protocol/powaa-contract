{
  "name": "@powaa/powaa-contract",
  "version": "0.0.1-rc.0",
  "author": {
    "name": "Powaa Protocol Development Team"
  },
  "scripts": {
    "prepublishOnly": "yarn compile; yarn build",
    "copy-dts-typechain": "npx copyfiles -u 1 \"typechain/**/*.d.ts\" compiled-typechain",
    "build:foundry-ffi": "tsc -p tsconfig.foundry-ffi.json",
    "build": "tsc -p tsconfig.cjs.json; yarn copy-dts-typechain",
    "remove:sol-log": "hardhat remove-logs",
    "test": "yarn test:foundry",
    "test:foundry:unit": "forge test --ffi -vvv;",
    "test:foundry:integration": "make test-integration",
    "test:foundry": "yarn test:foundry:unit; yarn test:foundry:integration",
    "compile": "rm -rf artifacts/ typechain/ compiled-typechain/ out/; yarn hardhat typechain --config hardhat.config.ts; forge build"
  },
  "license": "BUSL-1.1",
  "devDependencies": {
    "@defi-wonderland/smock": "2.1.0",
    "@nomiclabs/hardhat-ethers": "2.0.6",
    "@nomiclabs/hardhat-etherscan": "2.1.8",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/contracts": "4.7.0",
    "@openzeppelin/contracts-upgradeable": "4.7.0",
    "@openzeppelin/hardhat-upgrades": "1.19.0",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/chai": "4.3.1",
    "@types/mocha": "9.0.0",
    "@types/node": "12.20.41",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "chai": "4.3.6",
    "dotenv": "10.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-promise": "5.2.0",
    "ethereum-waffle": "3.4.4",
    "ethers": "5.6.6",
    "hardhat": "2.9.9",
    "hardhat-gas-reporter": "1.0.7",
    "hardhat-log-remover": "2.0.2",
    "hardhat-typechain": "0.3.5",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "3.3.7",
    "solidity-coverage": "0.7.21",
    "ts-node": "10.8.1",
    "typechain": "8.1.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@makerdao/hardhat-utils": "0.1.3",
    "@uniswap/v3-periphery": "^1.4.1"
  },
  "files": [
    "typechain",
    "artifacts",
    "compiled-typechain"
  ],
  "engines": {
    "node": ">=14.16.1"
  }
}
